package Thursday;

public class FunctionCalls {

	public int f1(int x) {
		return f2(x) + f3(x);
	}
	
	public int f2(int x) {
		return 2 * x;
	}
	
	public int f3(int x) {
		return x + 1;
	}
	
	public int f4(int x) {
		return 2 * f1(x);
	}
	
	public int composition(String formula, int x) {
		int result = x;
		String[] functions = formula.split(" . ");
		String lastFunction = functions[functions.length - 1];
		for (int i = functions.length; i > -1; i--) {
			switch(lastFunction) {
			case "f1": result=f1(result);
			case "f2": result=f2(result);
			case "f3": result=f3(resutl);
			case "f4": result=f4(resutl);
		}
		return result;
	}
}
