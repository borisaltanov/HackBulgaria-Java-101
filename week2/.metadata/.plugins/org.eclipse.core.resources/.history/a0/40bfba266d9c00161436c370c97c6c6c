package Thursday;

import java.util.Scanner;

public class Function {
	public String [] functionName;
	public String [] argumentName;
	public String [] functionBody;
	public String composition;
	public String argument;
	
	public Function(String [] in) {
		this.getFunctionNames(in);
	}
	
	public void getFunctionNames(String in) {
		Scanner scanner = new Scanner(in);
		int numberOfFunctions = scanner.nextInt();
		scanner.nextLine();
		int i = 0;
		while (scanner.hasNextLine()) {
		  String line = scanner.nextLine();
		  if (numberOfFunctions > 0) {
			  String [] functionAndBody = line.split("=");
			  String [] functionAndArgument = functionAndBody[0].split(" ");
			  this.functionName[i] = functionAndArgument[0];
			  this.argumentName[i] = functionAndArgument[1];
			  this.functionBody[i] = functionAndBody[1];
			  i++;
			  numberOfFunctions--;
		  }
		  else if (numberOfFunctions == 0) {
			  this.composition = line;
		  } else {
			  this.argument = line;
		  }
		}
		scanner.close();
	}

}
