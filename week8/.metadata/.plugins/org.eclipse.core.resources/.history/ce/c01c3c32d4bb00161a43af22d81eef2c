package week8;

public class Axe {
	
	int damage;
	int durability;
	int madDurability;
	
	public Axe(int damage, int durability) {
		this.damage = damage;
		this.durability = durability;
		this.madDurability = durability;
	}
	
	public int hit() {
		if(durability > 0) {
			durability--;
			return damage;
		}
		if(damage > 1) {
			damage--;
		}
		return damage;
	}
}
